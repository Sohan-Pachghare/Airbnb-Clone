<% layout("layouts/boilerplate.ejs") %>
<body>
    <h2>Edit your listing</h2>
    <form method="POST" action="/listings/<%= listing.id%>?_method=PUT">
        <input name="listing[title]"        value="<%=listing.title%>"         type="text" required><br>
        <input name="listing[description]"  value="<%=listing.description%>"   type="text" required><br>
        <input name="listing[image]"        value="<%=listing.image%>"         type="text"><br>
        <input name="listing[price]"        value="<%=listing.price%>"         type="number"><br>
        <input name="listing[location]"     value="<%=listing.location%>"      type="text"><br>
        <input name="listing[country]"      value="<%=listing.country%>"       type="text"><br>
        <br>
        <button type="submit">Submit</button>

    </form>
</body>