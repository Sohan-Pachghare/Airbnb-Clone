<% layout("layouts/boilerplate.ejs") %>
<body>
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings">
        <input name="listing[title]"        placeholder="Title"         type="text" required><br>
        <input name="listing[description]"  placeholder="Description"   type="text" required><br>
        <input name="listing[image]"        placeholder="Image URL"     type="text"><br>
        <input name="listing[price]"        placeholder="Price"         type="number"><br>
        <input name="listing[location]"     placeholder="Location"      type="text"><br>
        <input name="listing[country]"      placeholder="Country"       type="text"><br>
        <br>
        <button type="submit">Create Listing</button>

    </form>
</body>
