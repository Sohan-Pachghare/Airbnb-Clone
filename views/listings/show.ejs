<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-lg-4 offset-md-2">
            <h3>Listing Details</h3>
        </div>
            <div class="card col-6 offset-lg-4 offset-md-2 " style="width: 31.25rem;">
                <img src="<%= listing.image %>" class="card-img-top show-img" style="width: 31.25rem;" alt="listing img">
                <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b><br>
                    <%= listing.description %> <br>
                    <b>â‚¹ <%= listing.price.toLocaleString("en-IN") %></b> night <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
                </div>
                <br>
                <div class="btns ">
                    <a href="/listings/<%= listing.id%>/edit"><button class="btn show-edit-btn">Edit</button></a>
                    <form method="POST" action="/listings/<%= listing.id%>?_method=DELETE" >
                        <button class="btn btn-dark offset-4">Delete</button>
                    </form>
                </div>
            </div>
           
        </div>
    </div>
</body>
