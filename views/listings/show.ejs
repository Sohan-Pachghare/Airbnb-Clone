<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <h3 class="text-center mb-4"><%= listing.title %></h3>
                
                <div class="card  listing-card mb-4">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing img">
                    <div class="card-body">
                        <b>Owner : <%= listing.owner.username %></b>
                        <p class="card-text">
                            <%= listing.description %> <br>
                            <b class="fs-5">₹ <%= listing.price.toLocaleString("en-IN") %></b> <small>per night</small><br>
                            <i class="bi bi-geo-alt"></i> <%= listing.location %>, <%= listing.country %>
                        </p>
                    </div>
                    
                    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
                    <div class="d-flex justify-content-between p-3">
                        <a href="/listings/<%= listing.id%>/edit" class="btn btn-dark">Edit</a>
                        <form method="POST" action="/listings/<%= listing.id%>?_method=DELETE">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
                    <!-- Review Section -->
                    <div class="p-3">
                        <% if(currentUser) { %>
                        <h4 class="mb-3">Leave a review</h4>
                        <form method="POST" action="/listings/<%= listing.id %>/reviews" class="needs-validation mb-4" novalidate>
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                                <div class="d-flex justify-content-between small text-muted">
                                    <span>1</span><span>2</span><span>3</span><span>4</span><span>5</span>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea id="comment" name="review[comment]" class="form-control" required></textarea>
                                <div class="invalid-feedback">Please provide a review comment.</div>
                            </div>
                            <button class="btn btn-outline-dark">Submit Review</button>
                        </form>
                        <% } %>
                        <!-- Reviews List -->
                        <h4 class="mb-3">All Reviews</h4>
                        <div class="reviews-container">
                            <div class="row ">
                            <% for(review of listing.reviews) { %>
                                <div class="card col-lg-5 ms-2 mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <b class="text-muted">@<%= review.author.username %></b>
                                            <h6 class="card-subtitle text-muted">
                                                <%= review.rating %> ⭐
                                            </h6>
                                        </div>
                                        <p class="card-text mt-2"><%= review.comment %></p>
                                        <form method="POST" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
                                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>