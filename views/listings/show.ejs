<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-lg-4 offset-md-2">
            <h3><%= listing.title %></h3>
        </div>
            <div class="card col-6 offset-lg-4 offset-md-2 " style="width: 31.25rem;">
                <img src="<%= listing.image %>" class="card-img-top show-img" style="width: 31.25rem;" alt="listing img">
                <div class="card-body">
                <p class="card-text">
                    <!-- <b><%= listing.title %></b><br> -->
                    <%= listing.description %> <br>
                    <b>â‚¹ <%= listing.price.toLocaleString("en-IN") %></b> night <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
                </div>
                <br>
                <div class="btns ">
                    <a href="/listings/<%= listing.id%>/edit"><button class="btn show-edit-btn">Edit</button></a>
                    <form method="POST" action="/listings/<%= listing.id%>?_method=DELETE" >
                        <button class="btn btn-dark offset-4">Delete</button>
                    </form>
                </div>
                <!-- Review form -->
                <hr>
                <div class="mb-3">
                    <h4 class="mb-3">Leave a review</h4>
                    <form method="POST" action="/listings/<%= listing.id %>/reviews" class="needs-validation" novalidate >
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input 
                                type="range" 
                                min="1" 
                                max="5" 
                                id="rating"
                                name="review[rating]" 
                                class="form-range"
                                required
                            >
                            <div class="d-flex justify-content-between">
                                <span>1</span>
                                <span>2</span>
                                <span>3</span>
                                <span>4</span>
                                <span>5</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea 
                                id="comment"
                                name="review[comment]" 
                                class="form-control"
                                required
                            ></textarea>
                            <div class="invalid-feedback">
                                Please provide a review comment.
                            </div>
                        </div>
                        <button class="btn btn-outline-dark">Submit Review</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
